<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="dao.UserDao">

    <select id="tryLogin" resultType="user">
        select *
        from user
        where user_name = #{userName}
          and user_pass = #{userPass}
    </select>

    <select id="getUser" resultType="user">
        select *
        from user
        where user_name = #{userName}
    </select>

    <select id="getUserByUid" resultType="user">
        select *
        from user
        where user_id = #{uid}
    </select>

    <insert id="addUser" parameterType="User">
        insert into user(user_type, user_name, user_pass)
        values (#{userType}, #{userName}, #{userPass})
    </insert>

    <update id="updateUser" parameterType="user">
        update user
        <set>
            <if test="userPass!=null">
                user_pass=#{userPass}
            </if>
        </set>
        where user_id=#{uid}
    </update>

    <delete id="deleteUser">
        delete
        from user
        where user_name = #{userName}
    </delete>

    <delete id="deleteUserByUid">
        delete
        from user
        where user_id = #{uid}
    </delete>

    <select id="getUserDesc" resultType="userDesc">
        select *
        from user_desc
        where user_name = #{userName}
    </select>

    <select id="getUserDescByUid" resultType="userDesc">
        select *
        from user_desc
        where user_id = #{uid}
    </select>

    <insert id="addUserDesc" parameterType="UserDesc">
        insert into user_desc(user_id, nick_name, sex, icon, signature, title, coin, exp, reg_time)
        values (#{uid},#{nickName}, #{sex}, #{icon}, #{signature}, #{title}, #{coin}, #{exp}, #{regTime})
    </insert>

    <update id="updateUserDesc" parameterType="userDesc">
        update user_desc
        <set>
            <if test="nickName!=null">
                nick_name=#{nickName},
            </if>
            <if test="sex!=null">
                sex=#{sex},
            </if>
            <if test="icon!=null">
                icon=#{icon},
            </if>
            <if test="signature!=null">
                signature=#{signature},
            </if>
            <if test="title!=null">
                title=#{title},
            </if>
        </set>
        where user_id=#{uid}
    </update>

    <update id="addCoin">
        update user_desc
        set coin = #{coin}
        where user_id = #{uid}
    </update>
    <update id="addExp">
        update user_desc
        set exp = #{exp}
        where user_id = #{uid}
    </update>
</mapper>
