<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="dao.FollowRelationDao">

    <select id="getFollowFromRelation" resultType="followRelation">
        select *
        from follow_relation
        where follow_from_id = #{followFromId}
    </select>

    <select id="getFollowToRelation" resultType="followRelation">
        select *
        from follow_relation
        where follow_to_id = #{followToId}
    </select>

    <insert id="addFollowRelation" parameterType="FollowRelation">
        insert into follow_relation(follow_from_id, follow_to_id)
        values (#{followFromId}, #{followToId})
    </insert>
    
    <delete id="deleteFollowRelation" parameterType="FollowRelation">
        delete
        from follow_relation
        where follow_from_id = #{followFromId}
        and follow_to_id = #{followToId}
    </delete>

</mapper>
